:root {
    --catalog-event-background-color: var(--color-gray94);
    --catalog-event-color: var(--primary__color);
}

//
//  Catalog Events
//  ---------------------------------------------

.block-category-event {
    background: var(--catalog-event-background-color);
    color: var(--catalog-event-color);
    padding: var(--indent__s) 0 15px;
    text-align: center;

    &.block:last-child {
        margin-bottom: var(--indent__s);
    }

    .block-title {
        margin: 0 0 var(--indent__s);

        strong {
            font-size: 15rem;
            font-weight: var(--font-weight__light);
        }
    }

    .ticker {
        //.lib-list-reset-styles();

        li {
            display: none;
            margin: 0 15px;
        }

        .value {
            font-size: 18rem;
            font-weight: var(--font-weight__light);
        }

        .label {
            font-size: 10rem;
            display: block;
            text-transform: lowercase;
        }
    }

    .dates {
        display: table;
        margin: 0 auto;

        .start,
        .end {
            display: table-cell;
            vertical-align: top;
        }

        .date {
            font-size: 18rem;
        }

        .time {
            display: block;
        }

        .start {
            padding-right: var(--indent__xl);
            position: relative;

            &:after {
                font-size: 18rem;
                content: '\2013';
                display: block;
                position: absolute;
                right: 15px;
                top: 0;
            }
        }
    }
}

//
//  Desktop
//  _____________________________________________

@media (min-width: env(--screen__m)) {
    .block-category-event {
        &.block:last-child {
            margin-bottom: var(--indent__l);
            padding: var(--indent__s) 0 var(--indent__l);
        }

        .block-title {
            margin: 0;

            strong {
                font-size: 24rem;
            }
        }

        .ticker {
            li {
                display: none;
                margin: 0 50px;
            }

            .value {
                font-size: 60rem;
            }

            .label {
                font-size: 14rem;
                text-transform: none;
            }
        }

        .dates {
            .date {
                font-size: 50rem;
            }

            .start {
                padding-right: 50px;

                &:after {
                    font-size: 50rem;
                    right: 10px;
                }
            }
        }
    }
}
