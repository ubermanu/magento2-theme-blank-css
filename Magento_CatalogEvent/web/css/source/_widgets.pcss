.block-event {
    .columns & {
        position: relative;
        z-index: 2;
    }

    .block-content {
        position: relative;

        >  .action {
            cursor: pointer;
            margin-top: -6px;
            position: absolute;
            top: 50%;
            z-index: 3;

            &.backward,
            &.forward {
                opacity: .5;
                overflow: hidden;
                width: 20px;

                //.lib-icon-font(
                //    var(--_icon-font-content): var(--icon-prev),
                //    var(--_icon-font-text-hide): true,
                //    var(--_icon-font-size): 55px,
                //    var(--_icon-font-line-height): 30px
                //);

                &:before {
                    margin-left: -15px;
                }
            }

            &.backward {
                left: 0;
            }

            &.forward {
                //.lib-icon-font-symbol(var(--icon-next));
                right: 0;

                &:before {
                    margin-left: -20px;
                }
            }

            &.inactive {
                cursor: default;
                display: none;
            }

            &:hover {
                opacity: 1;
            }
        }
    }

    .slider-panel {
        overflow: hidden;
        position: relative;
        z-index: 2;

        .slider {
            //&:extend(.abs-reset-list all);
            white-space: nowrap;

            .item {
                background: var(--catalog-event-background-color);
                display: inline-block;
                text-align: center;
                vertical-align: top;
                white-space: normal;
                width: 16.35%;

                .sidebar-main &,
                .sidebar-additional & {
                    width: 100%;
                }

                img {
                    max-width: 100%;
                }

                .category-name {
                    display: inline-block;
                    font-size: 18rem;
                    padding: 15px 5px 0;
                    word-break: break-all;
                }

                .ticker {
                    //.lib-list-reset-styles();

                    li {
                        display: none;
                        margin: 0 5px;
                    }

                    .value {
                        font-size: 26rem;
                        font-weight: var(--font-weight__light);
                    }

                    .label {
                        display: block;
                        font-size: 13rem;
                    }
                }

                .dates {
                    font-weight: var(--font-weight__light);

                    .start,
                    .end,
                    .date {
                        display: block;
                    }

                    .start {
                        &:after {
                            font-size: 18rem;
                            content: '\2013';
                            display: block;
                        }
                    }

                    .date {
                        font-size: 18rem;
                        font-weight: var(--font-weight__light);
                    }

                    .time {
                        font-size: 13rem;
                    }
                }

                .box-event {
                    .box-content {
                        padding: 5px 0 var(--indent__s);
                    }

                    .box-title {
                        display: block;
                        font-weight: var(--font-weight__light);
                        margin: var(--indent__s) 0 0;
                    }
                }

                .action {
                    &.show {
                        //&:extend(.abs-add-box-sizing all);
                        display: block;
                        padding: 0;

                        .category.name {
                            display: inline-block;
                            padding: 30px 10px 0;
                        }

                        img {
                            display: block;
                        }
                    }

                    &.event {
                        //.lib-button-primary();
                        //&:extend(.abs-action-link-button all);
                        margin-top: 15px;

                        &:hover {
                            text-decoration: none;
                        }
                    }
                }
            }
        }
    }
}
