.table.grouped {
    //.lib-table-bordered(
    //    var(--_table_type): horizontal
    //);

    > thead > tr > th {
        border-bottom: 0;
    }

    .product-item-name {
        font-weight: var(--font-weight__regular);
    }

    .price-box {
        .price {
            font-size: var(--font-size__base);
        }
    }

    .control {
        .qty {
            //&:extend(.abs-input-qty all);
        }
    }

    .stock.unavailable {
        font-weight: normal;
        margin: 0;
        text-transform: none;
        white-space: nowrap;
    }

    .row-tier-price {
        td {
            border-top: 0;
        }

        .prices-tier {
            margin: 0 -10px 10px;
        }
    }
}
