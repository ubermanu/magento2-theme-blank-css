.toolbar {
    &.wishlist-toolbar {
        & .limiter {
            float: right;
        }
        & .main .pages {
            display: inline-block;
            position: relative;
            z-index: 0;
        }
        & .toolbar-amount,
        & .limiter {
            display: inline-block;
            z-index: 1;
        }
    }
}

.form.wishlist.items {
    & .actions-toolbar {
        //&:extend(.abs-reset-left-margin all);
    }
}

.product-info-main,
.product-options-bottom,
.block-bundle-summary {
    & .action.towishlist {
        //&:extend(.abs-action-addto-product all);
    }
}

.product-items,
.products.list.items,
.table-comparison {
    & .action {
        &.towishlist {
            //&:extend(.abs-actions-addto-gridlist all);
            //.lib-icon-font-symbol(
            //    var(--icon-wishlist-empty)
            //);
        }
    }
}

.account .table-wrapper .data.table.wishlist {
    //.lib-table-bordered(
    //    var(--_table_type): horizontal
    //);

    & thead > tr > th {
        border-bottom: 0;
    }

    & tbody > tr:last-child > td {
        border-bottom: 1px solid var(--table__border-color);
    }

    & .product.name {
        display: inline-block;
        margin-bottom: var(--indent__s);
    }

    & .box-tocart {
        margin: var(--indent__s) 0;

        & .qty {
            vertical-align: middle;
            //&:extend(.abs-input-qty all);
        }
    }

    & .col {
        &.item {
            width: 50%;
        }

        &.photo {
            max-width: 150px;
        }

        &.selector {
            max-width: 15px;
        }
    }

    & textarea {
        margin: var(--indent__s) 0;
    }

    & .input-text.qty {
        margin-bottom: var(--indent__s);
    }

    & .action.primary {
        vertical-align: top;
    }

    & .price {
        font-weight: var(--font-weight__bold);
    }
}

.block-wishlist {
    & .block-title {
        //&:extend(.abs-block-title all);
    }

    & .counter {
        //&:extend(.abs-block-items-counter all);
    }

    & .product-item-name {
        margin-right: var(--indent__m);
    }
}

.products-grid.wishlist {
    & .product {
        &-item {
            margin-left: 2%;
            width: calc((100% - 4%) / 3);

            &:nth-child(3n + 1) {
                margin-left: 0;
            }

            &-photo {
                display: block;
                margin-bottom: var(--indent__s);
            }

            &-name {
                margin-top: 0;
            }

            & .price-box {
                margin: 0;
            }

            &-tooltip {
            }

            & .comment-box {
                & .label {
                    //&:extend(.abs-visually-hidden all);
                }
            }

            &-comment {
                display: block;
                height: 42px;
                margin: var(--indent__s) 0;
            }

            &-actions {
                & > * {
                    margin-right: 15px;

                    &:last-child {
                        margin-right: 0;
                    }
                }
            }

            & .box-tocart {
                & input.qty {
                    height: 32px;
                    //&:extend(.abs-input-qty all);
                }
            }
        }
    }
}

//
//  Mobile
//  _____________________________________________

@media (max-width: env(--screen__s)) {
    .products-grid.wishlist {
        & .product-item {
            border-bottom: 1px solid var(--secondary__color);
            margin: 0;
            width: 100%;

            &:first-child {
                border-top: 1px solid var(--secondary__color);
            }
        }
    }
}

@media (max-width: env(--screen__m)) {
    .products-grid.wishlist {
        margin-bottom: var(--indent__l);
        margin-right: 0;
        & .product {
            &-item {
                padding: var(--indent__base) 0 var(--indent__base) 0;
                position: relative;

                &-photo {
                    float: left;
                    margin-right: var(--indent__base);
                }

                &-name {
                    font-size: 16rem;
                }

                &-actions {
                    display: block;
                    float: left;

                    & .action {
                        margin-right: 15px;

                        &:last-child {
                            margin-right: 0;
                        }

                        &.edit {
                            float: left;
                        }

                        &.delete {
                            float: right;
                        }

                        &.edit,
                        &.delete {
                            margin-top: 7px;
                        }
                    }
                }

                &-name,
                &-description,
                & .price-box,
                &-tooltip {
                    margin-left: 95px;
                }

                & .box-tocart {
                    float: left;
                    margin-right: var(--indent__base);

                    & .stock {
                        margin-top: 7px;
                    }
                }

                & .giftregisty-dropdown,
                & .field.qty {
                    display: none;
                }
            }

            &-image-container {
                max-width: 80px;
            }
        }
    }

    //
    //  Grid view for wishlist
    //  -----------------------------------------

    .wishlist-index-index {
        & .product {
            &-item {
                width: 100%;
                &-info {
                    width: auto;
                }
            }
        }
    }
}

@media (min-width: env(--screen__s)) {
    .wishlist-index-index {
        & .products-grid {
            & .product-item {
                margin-bottom: var(--indent__base);
            }

            & .product-item-actions {
                margin: 0;
            }
        }
    }
}

//
//  Desktop
//  _____________________________________________

@media (min-width: env(--screen__m)) {
    .products-grid.wishlist {
        & .product {
            &-item {
                &-tooltip {
                    display: inline-block;
                }

                &-actions {
                    margin: var(--indent__s) 0 0;
                }

                & .fieldset {
                    & .field.qty {
                        margin-bottom: var(--indent__s);
                        padding-right: var(--indent__s);

                        & .label {
                            width: auto;
                        }
                    }
                }

                & .box-tocart {
                    & .actions-primary {
                        margin: 0;
                    }

                    & .stock {
                        margin: var(--indent__base) 0 0;
                    }
                }
            }
        }
    }

    .wishlist-index-index {
        & .product {
            &-item {
                &-info {
                    width: 240px;
                }
            }
        }

        & .main {
            & .form-wishlist-items {
                & .actions-toolbar {
                    //&:extend(.abs-reset-left-margin-desktop all);
                }
            }
        }
    }
}

@media (min-width: env(--screen__l)) {
    .wishlist-index-index {
        & .products-grid {
            & .product-items {
                margin: 0;
            }

            & .product-item {
                margin-left: calc((100% - 4 * 24.439%) / 3);
                padding: 0;
                width: 24.439%;

                &:nth-child(4n + 1) {
                    margin-left: 0;
                }
            }
        }
    }
}
