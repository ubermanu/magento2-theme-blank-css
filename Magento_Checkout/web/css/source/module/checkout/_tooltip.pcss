:root {
    --checkout-tooltip__hover__z-index: var(--tooltip__z-index);

    --checkout-tooltip-icon-arrow__font-size: 10px;
    --checkout-tooltip-icon-arrow__left: calc(-1 * (var(--checkout-tooltip-content__padding) + var(--checkout-tooltip-icon-arrow__font-size) - var(--checkout-tooltip-content__border-width)));

    --checkout-tooltip-icon__color: var(--color-gray-light2);
    --checkout-tooltip-icon__content: var(--icon-help);
    --checkout-tooltip-icon__font-size: 24px;
    --checkout-tooltip-icon__hover__color: var(--primary__color);

    --checkout-tooltip-content__background-color: var(--color-gray-light01);
    --checkout-tooltip-content__border-color: var(--color-gray60);
    --checkout-tooltip-content__border-width: 1px;
    --checkout-tooltip-content__font-size: var(--font-size__base);
    --checkout-tooltip-content__padding: 12px;
    --checkout-tooltip-content__width: 270px;
    --checkout-tooltip-content__active__border-color: color(var(--checkout-tooltip-content__border-color) blackness(+20%));

    --checkout-tooltip-content-mobile-popup__width: 200px;
    --checkout-tooltip-content-mobile__right: calc(-1 * var(--indent__s));
    --checkout-tooltip-content-mobile__top: 30px + var(--checkout-tooltip-icon-arrow__font-size);
}

.field-tooltip {
    cursor: pointer;
    position: absolute;
    right: 0;
    top: 1px;

    &._active {
        z-index: var(--checkout-tooltip__hover__z-index);

        .field-tooltip-content {
            display: block;
        }

        .field-tooltip-action {
            &:before {
                color: var(--checkout-tooltip-icon__hover__color);
            }
        }
    }

    .label {
        //.lib-visually-hidden();
    }

    .field-tooltip-action {
        //.lib-icon-font(
        //    var(--checkout-tooltip-icon__content),
        //    var(--_icon-font-size): var(--checkout-tooltip-icon__font-size),
        //    var(--_icon-font-text-hide): true,
        //    var(--_icon-font-color): var(--checkout-tooltip-icon__color),
        //    var(--_icon-font-color-hover): var(--checkout-tooltip-icon__hover__color),
        //    var(--_icon-font-color-active): false
        //);

        &:before {
            padding-left : 1px;
        }

        &:focus {
            ._keyfocus & {
                z-index: var(--checkout-tooltip__hover__z-index);

                + .field-tooltip-content {
                    display: block;
                }

                &:before {
                    color: var(--checkout-tooltip-icon__hover__color);
                }
            }
        }
    }

    .field-tooltip-content {
        background: var(--checkout-tooltip-content__background-color);
        border: var(--checkout-tooltip-content__border-width) solid var(--checkout-tooltip-content__border-color);
        border-radius: var(--checkout-tooltip-content__border-width);
        font-size: var(--checkout-tooltip-content__font-size);
        padding: var(--checkout-tooltip-content__padding);
        width: var(--checkout-tooltip-content__width);
        display: none;
        left: 38px;
        position: absolute;
        text-transform: none;
        top: -9px;
        word-wrap: break-word;
        z-index: 2;

        &:before,
        &:after {
            //.lib-arrow(
            //var(--_position): left,
            //var(--_size): var(--checkout-tooltip-icon-arrow__font-size),
            //var(--_color): var(--checkout-tooltip-content__background-color)
            //);
            left: var(--checkout-tooltip-icon-arrow__left);
            top: var(--checkout-tooltip-content__padding);
            content: '';
            display: block;
            position: absolute;
            z-index: 3;
        }

        &:before {
            border-right-color: var(--checkout-tooltip-content__active__border-color);
        }

        &:after {
            border-right-color: var(--checkout-tooltip-content__background-color);
            width: 1px;
            z-index: 4;
        }
    }
}

//
//  Mobile
//  _____________________________________________

@media (max-width: env(--screen__xs)) {
    .modal-popup {
        .field-tooltip {
            .field-tooltip-content {
                width: var(--checkout-tooltip-content-mobile-popup__width);
            }
        }
    }
}

@media (max-width: env(--screen__m)) {
    .field-tooltip {
        .field-tooltip-content {
            right: var(--checkout-tooltip-content-mobile__right);
            top: var(--checkout-tooltip-content-mobile__top);
            left: auto;
            //&:extend(.abs-checkout-tooltip-content-position-top-mobile all);
        }
    }
}

//
//  Tablet
//  _____________________________________________

@media only screen and (max-width: env(--screen__m)) {
    .field-tooltip .field-tooltip-content {
        left: auto;
        right: -10px;
        top: 40px;
    }
    .field-tooltip .field-tooltip-content::before,
    .field-tooltip .field-tooltip-content::after {
        border: 10px solid transparent;
        height: 0;
        left: auto;
        margin-top: -21px;
        right: 10px;
        top: 0;
        width: 0;
    }
    .field-tooltip .field-tooltip-content::before {
        border-bottom-color: var(--checkout-tooltip-content__border-color);
    }
    .field-tooltip .field-tooltip-content::after {
        border-bottom-color: var(--checkout-tooltip-content__background-color);
        top: 1px;
    }
}
