//
//  Common
//  _____________________________________________

.block.filter {
    margin-bottom: var(--indent__xl);

    .filter-title {
        margin-bottom: var(--indent__base);

        strong {
            font-size: 18px;
        }
    }
}

.block-subtitle {
    display: inline-block;
    margin-bottom: var(--indent__s);
}

.filter-current {
    .item {
        margin-bottom: var(--indent__s);
    }

    .filter-label {
        display: block;
        font-weight: var(--font-weight__bold);

        &:after {
            content: ':';
        }
    }

    + .filter-actions {
        margin-bottom: var(--indent__l);
    }
}

.filter-options-content {
    .filter-count-label {
        //&:extend(.abs-visually-hidden all);
    }
}

.filter-options {
    margin: 0;

    .filter-options-title {
        //.lib-heading(h4);
        margin: 0 0 var(--indent__s);
        word-break: break-all;
    }

    .filter-options-content {
        margin: 0 0 var(--indent__m);

        .item {
            margin-bottom: 3px;
        }
    }

    .count {
        color: var(--text__color__muted);

        &:before {
            content: '(';
        }

        &:after {
            content: ')';
        }
    }
}

.items {
    //&:extend(.abs-reset-list all);
}

.filtered {
    .items {
        margin: 15px 0;
    }

    .item {
        margin-bottom: 6px;
        padding-left: 22px;
        position: relative;

        .label {
            font-weight: var(--font-weight__bold);
        }

        .action.remove {
            //&:extend(.abs-remove-button-for-blocks all);
            left: -6px;
            position: absolute;
            top: 0;
        }
    }

    & + .actions {
        margin-bottom: 35px;
    }
}

//
//  Mobile
//  _____________________________________________

@media (max-width: env(--screen__m)) {
    .page-with-filter {
        .columns {
            .sidebar-main {
                //.lib-vendor-prefix-order(0);
            }
        }
    }
}
