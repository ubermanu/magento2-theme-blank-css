.form-add-invitations {
    //&:extend(.abs-add-fields all);
    & .action {
        &.add {
            //.lib-button-icon(
            //    var(--_icon-font-content): var(--icon-expand),
            //    var(--_icon-font-text-hide): true,
            //    var(--_icon-font-size): 31px
            //);
            line-height: normal;
            padding: 2px 0;
            width: auto;
        }
    }
}

@media (max-width: env(--screen__m)) {
    & .form-add-invitations {
        & .additional,
        & .field.text {
            margin-top: var(--form-field__vertical-indent);
        }
    }
}

//
//  Desktop
//  _____________________________________________

@media (min-width: env(--screen__m)) {
    & .form-add-invitations {
        //&:extend(.abs-add-fields-desktop all);
        & .additional,
        & .field.text {
            margin-top: var(--form-field__vertical-indent__desktop);
        }
    }

    & .table-invitations {
        & .col {
            width: 50%;
        }
    }
}
