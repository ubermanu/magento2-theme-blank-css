//
//  Sales Module Styles
//  _____________________________________________

.email-summary {
    h1 {
        margin-bottom: var(--indent__xs);
    }
}

@media (max-width: env(--screen__xs)) {
    //  Shrink order number in order email so it will fit on single line on small screens
    .email-summary {
        h1 {
            font-size: calc(1.7 * var(--font-size__base)) !important; // 24px
        }
    }
}

//
//  Order Summary
//  ----------------------------------------------

.order-details {
    width: 100%;

    tr {
        > .address-details,
        > .method-info {
            padding: var(--email-content__padding__base) var(--email-content__padding__base) var(--email-content__padding__base) 0;
            width: 50%;

            h3 {
                margin-top: 0;
            }
        }

        //  Prevent extra spacing on Payment & Shipping Method row
        & + .method-info {
            > td {
                padding: 0 0 var(--email-content__padding__base);
            }
        }
    }

    .payment-method {
        margin-bottom: var(--indent__s);

        .title {
            font-weight: var(--font-weight__regular);
        }

        .data.table {
            > caption {
                display: none;
            }

            th {
                padding-right: var(--email-content__padding__base);
            }
        }
    }
}

//  Remove address and phone number link color on iOS
.email-non-inline() {
    .address-details a {
        //&:extend(.no-link a);
    }
}

@media (max-width: env(--screen__xs)) {
    //  Stack columns
    .order-details {
        .address-details,
        .method-info {
            display: block;
            padding: var(--email-content__padding__base) 0 !important;
            width: auto !important;

            h3 {
                margin-bottom: var(--indent__xs) !important;
                margin-top: 0 !important;
            }
        }
    }
}

//
//  Shipment Tracking
//  ----------------------------------------------

.shipment-track {
    //.lib-table(var(--table__width), 0);

    thead,
    tbody {
        > tr {
            > th,
            > td {
                background-color: var(--color-gray95);
                padding: var(--email-content__padding__base);
                width: 50%;
            }

            & + tr {
                th,
                td {
                    padding-top: 0;
                }
            }
        }
    }
}

//
//  Items Table
//  ----------------------------------------------

.email-items {
    .lib-table(var(--table__width), 0);
    border: var(--table__border-width) var(--table__border-style) var(--table__border-color);

    thead,
    tfoot {
        > tr {
            > th,
            > td {
                background-color: var(--color-gray95)
            }
        }
    }

    > thead,
    > tbody {
        > tr {
            > th {
                padding: var(--email-content__padding__base);
            }

            > td {
                padding: var(--email-content__padding__base);

                &.message-gift {
                    border-top: none;
                    padding-top: 0;
                }
            }
        }
    }

    > tbody,
    > tfoot {
        > tr {
            > th,
            > td {
                border-top: var(--table__border-width) var(--table__border-style) var(--table__border-color);
            }

            & + tr {
                > th,
                > td {
                    border-top: 0;
                }
            }
        }
    }

    p {
        margin-bottom: 0;
    }

    .product-name {
        font-weight: var(--font-weight__bold);
        margin-bottom: var(--email-content__padding__s);
    }

    .has-extra .sku {
        margin-bottom: var(--email-content__padding__base);
    }

    .item-info {
        dl {
            margin-bottom: 0;
            padding-left: var(--email-content__padding__m);

            dt,
            dd {
                margin-bottom: 0;
                padding-bottom: 0;
            }

            dd {
                padding-left: var(--email-content__padding__base);
            }
        }
    }

    .item-qty {
        text-align: center;
    }

    .item-price,
    .item-subtotal {
        text-align: right;
    }

    .item-extra {
        padding-top: 0;
    }

    .order-totals {
        > tr {
            > th {
                font-weight: var(--font-weight__regular);
            }

            > th,
            > td {
                padding: var(--email-content__padding__base);
                text-align: right;
            }

            & + tr {
                th,
                td {
                    padding-top: 0;
                }
            }
        }

        .price {
            white-space: nowrap;
        }
    }
}

