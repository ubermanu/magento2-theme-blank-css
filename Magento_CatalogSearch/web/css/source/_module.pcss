:root {
    --autocomplete__background-color: var(--color-white);
    --autocomplete__border: 1px solid var(--form-element-input__border-color);
    --autocomplete-item__border: 1px solid var(--color-gray90);
    --autocomplete-item__hover__color: var(--color-gray91);
    --autocomplete-item-amount__color: var(--color-gray60);
}

.block-search {
    margin-bottom: 0;

    .block {
        &-title {
            display: none;
        }
    }

    .block-content {
        margin-bottom: 0;
    }

    .label {
        //.lib-icon-font(
        //    var(--_icon-font-content): var(--icon-search),
        //    var(--_icon-font-size): 35px,
        //    var(--_icon-font-line-height): 33px,
        //    var(--_icon-font-color): var(--header-icons-color),
        //    var(--_icon-font-color-hover): var(--header-icons-color-hover),
        //    var(--_icon-font-color-active): var(--header-icons-color-hover),
        //    var(--_icon-font-text-hide): true
        //);
        display: inline-block;
        float: right;

        &.active {
            + .control {
                input {
                    position: static;
                }
            }
        }
    }

    .action.search {
        display: none;
    }

    .control {
        border-top: 1px solid var(--border-color__base);
        clear: both;
        margin: 0 calc(-1 * var(--layout__width-xs-indent)) -1px;
        padding: 0 var(--layout__width-xs-indent);
    }

    input {
        font-size: 16px;
        left: -300%;
        margin: 15px 0;
        position: absolute;
    }

    .nested {
        display: none;
    }
}

.search-autocomplete {
    //&:extend(.abs-add-box-sizing all);
    display: none;
    margin-top: -15px;
    overflow: hidden;
    position: absolute;
    z-index: 3;

    ul {
        //.lib-list-reset-styles();

        li {
            border-top: var(--autocomplete-item__border);
            cursor: pointer;
            margin: 0;
            padding: var(--indent__xs) var(--indent__xl) var(--indent__xs) var(--indent__s);
            position: relative;
            text-align: left;
            white-space: normal;

            &:not(:empty) {
                border-top: 0;
                border: var(--autocomplete__border);
                background: var(--autocomplete__background-color);
            }

            &:first-child {
                border-top: none;
            }

            &:hover,
            &.selected {
                background: var(--autocomplete-item__hover__color);
            }

            .amount {
                color: var(--autocomplete-item-amount__color);
                position: absolute;
                right: 7px;
                top: var(--indent__xs);
            }
        }
    }
}

.form.search.advanced {
    .fields.range {
        .field {
            &:first-child {
                position: relative;

                .control {
                    padding-right: 25px;

                    &:after {
                        content: ' \2013 ';
                        display: inline-block;
                        position: absolute;
                        right: 0;
                        text-align: center;
                        top: 6px;
                        width: 25px;
                    }
                }
            }

            &:last-child {
                position: relative;

                div.mage-error[generated] {
                    left: 0;
                    position: absolute;
                    top: 32px;
                }
            }

            &.with-addon {
                .control {
                    padding-right: 45px;
                }
            }
        }
    }

    .group.price {
        .addon {
            .addafter {
                background: none;
                border: 0;
                padding-top: 6px;
                position: absolute;
                right: 0;
                top: 0;
            }
        }
    }
}

.search.summary {
    margin-bottom: var(--indent__s);
}

//
//  Mobile
//  _____________________________________________

@media (max-width: env(--screen__m)) {
    .block-search {
        .block-content {
            margin-bottom: 0;
        }
    }
}

@media (max-width: env(--screen__s)) {
    .block-search {
        margin-top: var(--indent__s);
    }
}

//
//  Desktop
//  _____________________________________________

@media (min-width: env(--screen__m)) {
    .block-search {
        float: right;
        padding-left: 15px;
        position: relative;
        width: 250px;
        z-index: 4;

        .label {
            //&:extend(.abs-visually-hidden-desktop all);
        }

        .control {
            border-top: 0;
            margin: 0;
            padding: 0 0 25px;
        }

        .nested {
            display: block;
            padding-top: 5px;
            position: absolute;
        }

        input {
            //.lib-input-placeholder(var(--form-element-input-placeholder__color));
            margin: 0;
            padding-right: 35px;
            position: static;
        }

        .action.search {
            display: inline-block;
            //.lib-button-icon(
            //    var(--_icon-font-content): var(--icon-search),
            //    var(--_icon-font-text-hide): true,
            //    var(--_icon-font-color): var(--header-icons-color)
            //);
            //.lib-button-reset();
            padding: var(--indent__xs) 0;
            position: absolute;
            right: 10px;
            top: 0;
            z-index: 1;

            &:focus {
                &:before {
                    color: var(--color-gray20);
                }
            }
        }
    }

    .search-autocomplete {
        margin-top: 0;
    }
}
