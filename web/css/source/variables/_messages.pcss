//
//  Messages variables
//  _____________________________________________

:root {
    --message__padding: var(--indent__s) var(--indent__base);
    --message__margin: 0 0 var(--indent__s);

    --message__color: initial; // Each message type has its own message color
    --message__font-size: 13px;
    --message__font-family: initial;
    --message__font-style: initial;
    --message__font-weight: initial;
    --message__line-height: 1.2em;

    //  Links
    --message-link__color: var(--link__color);
    --message-link__color-hover: var(--link__hover__color);
    --message-link__color-active: var(--link__active__color);

    //  Icon
    --message-icon: none;
    --message-icon__font-size: calc(var(--message__font-size) * 2 + 2);
    --message-icon__font-line-height: var(--message-icon__font-size);
    --message-icon__inner-padding-left: 40px;
    --message-icon__lateral-width: 30px;
    --message-icon__lateral-arrow-size: 5px;
    --message-icon__top: 18px;
    --message-icon__right: initial;
    --message-icon__bottom: initial;
    --message-icon__left: 0;

    --message__border-width: initial;
    --message__border-color: initial;
    --message__border-style: initial;
    --message__border-radius: initial;
}
