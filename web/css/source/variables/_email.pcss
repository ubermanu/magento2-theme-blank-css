//
//  Email variables
//  _____________________________________________

:root {
    //  Base URL path
    --baseUrl: "{{base_url_path}}/";

    //  Structure
    --email-body__width: 600px;
    --email-body__padding: var(--indent__s);

    //  Content
    --email-content__padding__base: var(--indent__s);
    --email-content__padding__s: var(--indent__xs);
    --email-content__padding__m: var(--indent__base);
    --email-content__padding__l: var(--indent__l);
    --email-content__padding__xl: var(--indent__xl);

    //  Colors
    --email__background-color: var(--color-white);
    --email-content__background-color: var(--color-white);

    //  Messages
    --message-email__color: var(--text__color);
    --message-email__background: var(--message-info__background);
    --message-email__border-color: var(--message-info__border-color);
    --message-email-link__color: var(--message-info-link__color);
}
