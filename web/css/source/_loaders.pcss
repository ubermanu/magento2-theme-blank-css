.load.indicator {
    //.lib-loader();
    position: absolute;

    & > span {
        display: none;
    }
}

.loading-mask {
    //.lib-loading-mask();
    background: rgba(255, 255, 255, .5);

    & .loader {
        & > img {
            //.lib-loading-mask();
        }

        & > p {
            display: none;
        }
    }
}

body {
    & > .loading-mask {
        z-index: var(--loader-overlay__z-index);
    }
}

._block-content-loading {
    position: relative;
}

[data-role='main-css-loader'] {
    display: none;
}
