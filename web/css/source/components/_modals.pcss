body {
    &._has-modal {
        height: 100%;
        overflow: hidden;
        width: 100%;
    }
}

//  Modals overlay
.modals-overlay {
    z-index: var(--overlay__z-index);
}

.modal-slide,
.modal-popup {
    //.lib-modal();
}

.modal-slide {
    //.lib-modal-slide();
    &._inner-scroll {
        .modal-inner-wrap {
            overflow-y: visible;
            //.lib-vendor-prefix-display(flex);
            //.lib-vendor-prefix-flex-direction(column);
        }

        .modal-header,
        .modal-footer {
            //.lib-vendor-prefix-flex-grow(0);
            //.lib-vendor-prefix-flex-shrink(0);
        }

        .modal-content {
            overflow-y: auto;
        }

        .modal-footer {
            margin-top: auto;
        }
    }

    .modal-header,
    .modal-content,
    .modal-footer {
        padding: 0 var(--modal-slide__padding) var(--modal-slide__padding);
    }

    .modal-header {
        padding-bottom: var(--modal-slide-header__padding-vertical);
        padding-top: var(--modal-slide-header__padding-vertical);
    }
}

.modal-popup {
    //.lib-modal-popup();

    //  If applied, switching outer popup scroll to inner
    &._inner-scroll {
        overflow-y: visible;

        .ie11 & {
            overflow-y: auto;
        }

        .modal-inner-wrap {
            max-height: 90%;

            .ie11 & {
                max-height: none;
            }
        }

        .modal-content {
            overflow-y: auto;
        }
    }

    .modal-header,
    .modal-content,
    .modal-footer {
        padding-left: var(--modal-popup__padding);
        padding-right: var(--modal-popup__padding);
    }

    .modal-header,
    .modal-footer {
        //.lib-vendor-prefix-flex-grow(0);
        //.lib-vendor-prefix-flex-shrink(0);
    }

    .modal-header {
        padding-bottom: var(--modal-popup__padding) / 2.5;
        padding-top: var(--modal-popup__padding);
    }

    .modal-footer {
        margin-top: auto;
        padding-bottom: var(--modal-popup__padding);
        padding-top: var(--modal-popup__padding);
    }

    .modal-footer-actions {
        text-align: right;
    }
}

//
//  Mobile
//  _____________________________________________

//  Mobile transform to modal-slide
@media (max-width: env(--screen__m)) {
    .modal-popup {
        &.modal-slide {
            //.lib-modal-slide();

            .modal-inner-wrap {
                margin: 0;
                max-height: none;
            }
        }
    }
}
