//
//  Bundle Module Styles
//  ---------------------------------------------

//
//  Bundle Items
//  ---------------------------------------------

.email-items {
    .bundle-option-label {
        > td {
            padding: 0 var(--email-content__padding__base) 0 var(--email-content__padding__l);
        }
    }

    .bundle-option-value {
        > td {
            padding: 0 var(--email-content__padding__base) var(--email-content__padding__base);

            &.item-info {
                padding: 0 var(--email-content__padding__base) var(--email-content__padding__base) var(--email-content__padding__xl);
            }
        }
    }

    tr.bundle-option-value + tr {
        > td.item-extra {
            padding-top: var(--email-content__padding__base);
        }
    }
}
